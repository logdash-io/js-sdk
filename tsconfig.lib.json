{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es5",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "strict": false,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules/**/*"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
