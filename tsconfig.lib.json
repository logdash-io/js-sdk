{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "jsx": "react-jsx"
    },
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules/**/*"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
